<div class="uk-overflow-auto">
<h2 class="uk-heading-bullet">Twonkers List</h2>
<table class="uk-table uk-table-hover uk-table-divider uk-table-responsive">

  <thead class="uk-dark">
    <tr>
      <th class="uk-table-shrink">First</th>
        <th class="uk-table-shrink">Last</th>
        <th class="uk-table-shrink">Email</th>
        <th class="uk-table-shrink">Phone</th>
        <th class="uk-table-shrink">Twitter</th>
        <th class="uk-table-shrink">Gab</th>
        <th class="uk-table-expand">View Friend</th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.gab %></td>
        <td><%= link_to 'Show', friend, class: "uk-button uk-button-primary" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class: "uk-button uk-button-custom" %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "uk-button uk-button-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

